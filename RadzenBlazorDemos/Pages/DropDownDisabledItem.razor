@using RadzenBlazorDemos.Models.Northwind

@inherits DbContextPage

<div class="rz-p-sm-12 rz-text-align-center">
    <RadzenLabel Text="Select Value" Component="DropDownDisabledItem" Style="margin-right: 8px; vertical-align: middle;" />
    <RadzenDropDown @bind-Value=@value Data=@products TextProperty="@nameof(Product.ProductName)" ValueProperty="@nameof(Product.ProductID)" DisabledProperty="@nameof(Product.Discontinued)" Style="width: 100%; max-width: 400px;" Name="DropDownDisabledItem" />
</div>

@code {
    int value = 1;
    IEnumerable<Product> products;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        products = dbContext.Products;
    }
}